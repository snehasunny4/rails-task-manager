<div class="container w-50">
<h1 class="mt-4 mb-4 text-success">Edit task</h1>

<%= form_with model: @tasks do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control mb-4" %>
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  <div class="checkbox">
    <label class="mt-2" ><%= f.check_box :completed %> Completed</label>
  </div>
  <%= f.submit class: "btn btn-success mt-4" %>
<% end %>

<button type="button" class="btn btn-light mt-2">
<%= link_to "List all the tasks", tasks_path, class:"text-decoration-none text-dark" %>
</button>

</div>
