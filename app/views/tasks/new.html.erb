<div class="container w-50">
<h1 class="mt-4 mb-4 text-success">New Task</h1>

<%= form_with model: @tasks do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control mb-4" %>
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control " %>
  <%= f.submit class: "btn btn-success mt-2" %>
<% end %>

<button type="button" class="btn btn-light mt-2">
  <%= link_to "Back to the list", tasks_path, class:"text-decoration-none text-dark" %>
</button>

</div>
